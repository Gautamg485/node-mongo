extends layout
block style
	link(rel='stylesheet', href='/stylesheets/style.css')
block content
	.col-sm-8
		- console.log(data);
		table#customers
			thead
				tr
					th Name
					th Status
					th Date
			tbody
				each logs,logIndex in data
					tr
						td #{logs.name}
						td #{logs.shopname}
						td #{logs.status}
	.col-sm-4
		form#listSave( action='/list' method="post")
			div.form-group
				label Name:
			div.form-group
				input#name.form-control(type='text', placeholder='first and last' name='name')
			div.form-group
				label Shop Name:
			div.form-group
				input#shopname.form-control(type='text', placeholder='shop name' name='shopname')
			div.form-group
				label Status:
			div.form-group
				input#status.form-control(type='text', placeholder='status' name='status')
			button.btn.btn-primary#formsubmit(type='submit') Submit
block script
	script(src="/javascripts/commentsave.js")